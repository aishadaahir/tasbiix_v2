<?xml version="1.0" encoding="utf-8"?>
<!-- activity_compass.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:background="#FFFFFF"
    tools:context=".compasslocation">

<ImageView
    android:id="@+id/compass_image"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/compass"
    android:contentDescription="compass_image" />

<TextView
    android:id="@+id/address_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/compass_image"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#000000"
    tools:text="Target Address" />

    <TextView
    android:id="@+id/jiho"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/address_text"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#000000"
    tools:text="jiho" />

    <ImageView
        android:id="@+id/arrowView"
        android:layout_width="43dp"
        android:layout_height="236dp"
        android:layout_below="@id/jiho"
        android:layout_centerInParent="true"
        android:layout_marginTop="31dp"
        android:contentDescription="@string/compass_hands"
        android:scaleType="fitXY"
        android:src="@drawable/hands" />

</RelativeLayout>