<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Version2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Version2" parent="Base.Theme.Version2" />

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize other attributes as needed -->
        <item name="android:windowBackground">#2196F3</item>
        <item name="colorContainer">#EC8D8D</item>
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="AppTheme.blue.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize other attributes as needed -->
<!--        background of the page-->
        <item name="android:windowBackground">#E4D7A2</item>
<!--        text color-->
        <item name="android:textColor">#F48F9E</item>
<!--        controls like button and radio or tabs-->
        <item name="colorPrimary">#B2CD6F</item>
<!--        still don't know-->
        <item name="colorPrimaryVariant">#5E4F7C</item>
<!--        text over controls like button-->
        <item name="colorOnPrimary">#9B4444</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="AppTheme.NoActionBar.light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize other attributes as needed -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:itemBackground">#FFFFFF</item>
        <item name="dailog">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="colorPrimary">#000D8EF9</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="containers">#27000000</item>
        <item name="buttons_imgview">#000000</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="AppTheme.NoActionBar.dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize other attributes as needed -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:itemBackground">#000000</item>
        <item name="dailog">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="containers">#7AFFFFFF</item>
        <item name="buttons_imgview">#FFFFFF</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:searchHintIcon">@drawable/non</item>
        <item name="android:searchIcon">@drawable/custom_search_icon</item>
        <item name="android:closeIcon">@drawable/cancel</item>
    </style>

</resources>