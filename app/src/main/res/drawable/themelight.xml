<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/light" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="400dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="3dp"  android:color="?attr/buttons_imgview"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="400dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp"  android:color="?attr/buttons_imgview"/>
        </shape>
    </item>


</selector>